{
  "name": "error-handling-test-config",
  "version": "1.0.0",
  "target": {
    "url": "https://example.com",
    "baseUrl": "https://example.com"
  },
  "browser": {
    "headless": false,
    "slowMo": 100,
    "timeout": 30000,
    "viewport": {
      "width": 1920,
      "height": 1080
    },
    "userAgent": null,
    "locale": "fr-FR"
  },
  "performance": {
    "delayBetweenActions": 500
  },
  "errorHandling": {
    "retries": 3,
    "retryDelay": 1000,
    "continueOnError": false,
    "screenshotOnError": true,
    "screenshotPath": "./screenshots"
  },
  "logging": {
    "level": "debug",
    "console": true,
    "file": {
      "enabled": true,
      "path": "./logs/error-handling-test.log"
    }
  },
  "workflow": "../../configs/examples/error-handling-test.json",
  "output": {
    "format": "json",
    "path": "./output",
    "filename": "error-test-{{date}}-{{time}}",
    "options": {
      "pretty": true
    }
  }
}
