{
  "name": "generic-scraper",
  "version": "1.0.0",
  "description": "Outil de scraping générique et configurable, basé sur Playwright - Automatisez vos extractions web sans écrire de code !",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js --config ./data/config.json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test:config": "node -e \"require('./src/utils/configLoader').loadConfig()\"",
    "validate": "npm run lint && npm run test:config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArthurBr02/generic-scraper.git"
  },
  "keywords": [
    "scraper",
    "scraping",
    "web-scraping",
    "playwright",
    "automation",
    "data-extraction",
    "crawler",
    "bot",
    "workflow",
    "scheduler",
    "json-config"
  ],
  "author": "ArthurBr02",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ArthurBr02/generic-scraper/issues"
  },
  "homepage": "https://github.com/ArthurBr02/generic-scraper#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "json2csv": "^6.0.0-alpha.2",
    "minimist": "^1.2.8",
    "node-cron": "^4.2.1",
    "playwright": "^1.57.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2"
  }
}
