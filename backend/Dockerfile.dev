FROM node:20-alpine

WORKDIR /app

# Install build tools for native dependencies (sqlite3)
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p /app/configs /app/logs /app/output /app/data

# Expose port
EXPOSE 4000

# Start development server with tsx watch
CMD ["npm", "run", "dev"]
